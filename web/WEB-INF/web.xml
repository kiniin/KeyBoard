<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>javaservlet.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>regServlet</servlet-name>
        <servlet-class>javaservlet.servlet.RegServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>productView</servlet-name>
        <servlet-class>javaservlet.servlet.productView</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>productDetails</servlet-name>
        <servlet-class>javaservlet.servlet.productDetails</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>productScenes</servlet-name>
        <servlet-class>javaservlet.servlet.productScenes</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>productSearch</servlet-name>
        <servlet-class>javaservlet.servlet.productSearch</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>changePassword</servlet-name>
        <servlet-class>javaservlet.servlet.ChangePassword</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>userDetailed</servlet-name>
        <servlet-class>javaservlet.servlet.UserDetailed</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>javaservlet.servlet.AddProduct</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>userAddress</servlet-name>
        <servlet-class>javaservlet.servlet.userAddress</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>orderView</servlet-name>
        <servlet-class>javaservlet.servlet.orderView</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>turntoCart</servlet-name>
        <servlet-class>javaservlet.servlet.TurntoCart</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>deleteProduct</servlet-name>
        <servlet-class>javaservlet.servlet.DeleteProduct</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>makesureOrder</servlet-name>
        <servlet-class>javaservlet.servlet.MakesureOrder</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>generateOrder</servlet-name>
        <servlet-class>javaservlet.servlet.GenerateOrders</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>changeCart</servlet-name>
        <servlet-class>javaservlet.servlet.AlterProInCart</servlet-class>
    </servlet>


    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>


    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>regServlet</servlet-name>
        <url-pattern>/reg</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>productScenes</servlet-name>
        <url-pattern>/scenes</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>productDetails</servlet-name>
        <url-pattern>/details</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>productSearch</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>productView</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>changePassword</servlet-name>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>userDetailed</servlet-name>
        <url-pattern>/userDetailed</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/addProduct</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>userAddress</servlet-name>
        <url-pattern>/addAddress</url-pattern>
        <url-pattern>/editAddress</url-pattern>
        <url-pattern>/getAddress</url-pattern>
        <url-pattern>/deleteAddress</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>orderView</servlet-name>
        <url-pattern>/viewOrder</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>turntoCart</servlet-name>
        <url-pattern>/turntoCart</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>deleteProduct</servlet-name>
        <url-pattern>/deleteProduct</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>makesureOrder</servlet-name>
        <url-pattern>/makesureOrder</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>generateOrder</servlet-name>
        <url-pattern>/generateOrder</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>changeCart</servlet-name>
        <url-pattern>/changeCart</url-pattern>
    </servlet-mapping>


</web-app>